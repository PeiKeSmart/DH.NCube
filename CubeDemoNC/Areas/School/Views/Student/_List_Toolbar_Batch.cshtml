@using NewLife.Common;
@using XCode
@using XCode.Membership
@using NewLife.Cube;
@using NewLife.Web;
@{
    var user = ViewBag.User as IUser ?? User.Identity as IUser;
    var page = ViewBag.Page as Pager;
    var fact = ViewBag.Factory as IEntityFactory;
    var set = ViewBag.PageSetting as PageSetting ?? PageSetting.Global;
}
@if (set.EnableSelect)
{
    <text>
        老师名字：@Html.TextBox("teacher", page["teacher"], new { @class = "form-control" })
    </text>

    <button type="button" class="btn btn-purple btn-sm" data-action="action" data-url="@Url.Action("Call")" data-fields="keys,teacher" disabled>
        批量呼叫
    </button>
    <button type="button" class="btn btn-purple btn-sm" data-action="action" data-url="@Url.Action("DisableSelect")" data-fields="keys" disabled>
        批量禁用
    </button>
}