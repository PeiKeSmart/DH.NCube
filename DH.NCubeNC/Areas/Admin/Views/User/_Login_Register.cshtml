@model LoginViewModel
@using NewLife.Common
@{
    var set = Model;
    //var returnUrl = (String)ViewBag.ReturnUrl;
    //var url = Url.Action("Register", "User", new { r = returnUrl });
}
<div class="tab-pane fade" id="Register">
    <!-- Logo-->
    <div class="row text-center">
        <i class="glyphicon glyphicon-cloud login-logo center-block" style="display: inline-block;"></i>
        @*<span style="display: inline-block;vertical-align: 56px;margin-left: 10px;font-size: 24px;">@SysConfig.Current.DisplayName</span>*@
    </div>
    <!-- 登录-->
    <form action="@Url.Action("Register", "User", new { r = set.ReturnUrl })" class="cube-login" method="post">
        @Html.ValidationSummary()
        <span class="heading text-primary">@set.DisplayName 注册</span>
        <div class="form-group">
            <input type="email" class="form-control" id="reg_email" name="email" placeholder="输入你的邮箱地址">
            <i class="glyphicon glyphicon-email"></i>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="reg_username" name="username" placeholder="用户名">
            <i class="glyphicon glyphicon-user"></i>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="reg_password" name="password" placeholder="密码" autocomplete="off">
            <i class="glyphicon glyphicon-user"></i>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="reg_password2" name="password2" placeholder="重复密码" autocomplete="off">
            <i class="glyphicon glyphicon-user"></i>
        </div>
        <div class="form-group text-center clear-fix">
            <div style="display: inline-block; margin-top: 5px; float: left;">
                @*<span style="margin-left: auto; margin-right: auto; margin-top: 5px;">已有账号？</span>*@
                <a href="#Login" data-toggle="tab" style="margin-left: auto; margin-right: auto;position: static; font-size: 15px; margin-top: 5px;">
                    @*<i class="ace-icon fa fa-arrow-right"></i>*@
                    <span>回到登录</span>
                </a>
            </div>
            <button type="submit" class="btn btn-default text-center">注册</button>
        </div>
    </form>
